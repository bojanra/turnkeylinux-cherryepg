#!/bin/bash -ex

dl() {
  [ "$FAB_HTTP_PROXY" ] && PROXY="--proxy $FAB_HTTP_PROXY"
  cd $2; curl -L -f $PROXY $1 --create-dirs -o $3; cd -
}

